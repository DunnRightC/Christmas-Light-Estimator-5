<script>
const pricing={roof:5.5,ridge:6.5,install_roof:3,install_ridge:3.5,newDisc:5,promoKey:"NEIGHBOR10",promo:10};
function money(v){return v.toLocaleString(undefined,{style:"currency",currency:"USD"})}
function recalc(){
  const roof=+document.getElementById('roof_ft').value||0;
  const ridge=+document.getElementById('ridge_ft').value||0;
  const install=document.getElementById('install_only').checked;
  const subtotal=(install?(roof*pricing.install_roof+ridge*pricing.install_ridge):(roof*pricing.roof+ridge*pricing.ridge));
  const newDisc=subtotal*(pricing.newDisc/100);
  const grand=subtotal-newDisc;
  document.getElementById('subtotal').textContent=money(subtotal);
  document.getElementById('newdisc').textContent="-"+money(newDisc);
  document.getElementById('promodisc').textContent="-$0.00";
  document.getElementById('grand').textContent=money(grand);
}
document.querySelectorAll('input').forEach(e=>e.addEventListener('input',recalc));
recalc();

document.getElementById('requestBtn').onclick=()=>{
  const n=document.getElementById('name').value.trim();
  const phone=document.getElementById('phone').value.trim();
  const email=document.getElementById('email').value.trim();
  const zip=document.getElementById('zip').value.trim();
  const addr=document.getElementById('address').value.trim();
  const d=document.getElementById('description').value.trim();
  const g=document.getElementById('grand').textContent;

  const body=
`Hello Dunn Right Creations,

I'd like to request an installation estimate.

Name: ${n}
Phone: ${phone}
Email: ${email}
ZIP: ${zip}
Address: ${addr}

Project details:
${d}

Estimated total: ${g}

This is a preliminary estimate ‚Äî final cost will be confirmed after the onsite visit.

Thank you!`;

  window.location.href=`mailto:dunnrightcreations1@gmail.com?subject=Christmas Light Estimate&body=${encodeURIComponent(body)}`;
};
</script>
